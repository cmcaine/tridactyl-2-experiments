{
    "manifest_version": 2,
    "name": "Tridactyl-Meiosis",
    "version": "0.0.1",
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "css": ["static/css/cleanslate.css", "static/css/content.css"],
            "run_at": "document_start"
        }
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "web_accessible_resources": ["test.html"],
    "content_security_policy": "script-src 'unsafe-eval' 'self'; object-src 'self'",
    "permissions": ["<all_urls>"],
    "browser_specific_settings": {
        "gecko": {
            "id": "tridactyl-meiosis@saulrh.com",
            "strict_min_version": "66.0"
        }
    }
}
